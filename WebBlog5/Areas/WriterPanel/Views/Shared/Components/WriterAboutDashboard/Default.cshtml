@using EntityLayer.Concrete
@model List<Writer>
<!--Info-->
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Profilin</h4>
                <div class="d-flex mt-5 align-items-top">
                    @foreach (var item in Model)
                    {
                        <img src="@item.Image" class="img-sm rounded-circle mr-3" alt="image">
                        <div class="mb-0 flex-grow">
                            <h5 class="mr-2 mb-2">@item.Name - @item.Mail</h5>
                            <p class="mb-0 font-weight-light">@item.About</p>
                            <br>
                            <p>
                                <a href="/WriterPanel/Profile/WriterUpdateProfile/" class="btn btn-default">Profilini Güncəllə</a>
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "MessageUpdate";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Mesaj Ətraflı</h2>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            @using (Html.BeginForm("ContactUpdate", "Contact", FormMethod.Post))
            {
                <div class="form-group  row">
                    <div class="col-sm-10">
                        @Html.HiddenFor(x=>x.ID, new {@class="form-control"})
                    </div>
                </div>
                <div class="form-group  row">
                    <label class="col-sm-2 col-form-label">İstifadəçi adı</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x=>x.UserName, new {@class="form-control"})
                    </div>
                </div>
                <div class="form-group  row">
                    <label class="col-sm-2 col-form-label">Gmail adresi</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x=>x.Mail, new {@class="form-control"})
                    </div>
                </div>
                <div class="form-group  row">
                    <label class="col-sm-2 col-form-label">Mövzu</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x=>x.Subject, new {@class="form-control"})
                    </div>
                </div>
                <div class="form-group  row">
                    <label class="col-sm-2 col-form-label">Mesaj açıqlaması</label>
                    <div class="col-sm-10">
                        @Html.TextAreaFor(x=>x.Message,15,3, new {@class="form-control"})
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
            }
        </div>
    </div>
</div>







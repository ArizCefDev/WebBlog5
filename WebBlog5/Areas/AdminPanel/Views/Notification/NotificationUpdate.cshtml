@model EntityLayer.Concrete.Notification
@{
    ViewData["Title"] = "NotificationUpdate";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Bildirişləri Güncəllə</h2>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            @using (Html.BeginForm("NotificationUpdate", "Notification", FormMethod.Post))
            {
                <div class="form-group  row">
                    <div class="col-sm-10">
                        @Html.HiddenFor(x=>x.ID, new {@class="form-control"})
                    </div>
                </div>
                <div class="form-group  row">
                    <label class="col-sm-2 col-form-label">Bildiriş başlığı</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x=>x.Type, new {@class="form-control"})
                        @Html.ValidationMessageFor(x=>x.Type,"",new {@class="errormessage"})
                    </div>
                </div>
                <div class="form-group  row">
                    <label class="col-sm-2 col-form-label">Bildiriş açıqlaması</label>
                    <div class="col-sm-10">
                        @Html.TextAreaFor(x=>x.Details,15,3, new {@class="form-control"})
                        @Html.ValidationMessageFor(x=>x.Details,"",new {@class="errormessage"})
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group row">
                    <div class="col-sm-4 col-sm-offset-2">
                        <button class="btn btn-primary btn-sm" type="submit">Güncəllə</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>





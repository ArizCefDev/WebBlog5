@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<!--/main-->
<section class="main-content-w3layouts-agileits">

    <h3 class="tittle">Bizimlə əlaqə</h3>
    <p class="sub text-center">Fikirləriniz bizim üçün önəmlidir</p>
    <div class="contact-map inner-sec">

        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d96969.94857270917!2d49.561040157672316!3d40.57889253295656!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x403096dcd0923f6b%3A0xdf4767c369322a71!2zU3VtcWF5xLF0LCBBesmZcmJheWNhbg!5e0!3m2!1saz!2s!4v1656776371104!5m2!1saz!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
    <div class="ad-inf-sec bg-light">
        <div class="container">
            <div class="address row">

                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-4 address-left text-center">
                            <i class="far fa-map"></i>
                        </div>
                        <div class="col-md-8 address-right text-left">
                            <h6>Adresiniz</h6>
                            <p>

                                Sumqayıt şəh. Azərbaycan

                            </p>
                        </div>
                    </div>

                </div>
                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-4 address-left text-center">
                            <i class="far fa-envelope"></i>
                        </div>
                        <div class="col-md-8 address-right text-left">
                            <h6>Gmail</h6>
                            <p>
                                <a href="mailto:arizcefdev@gmail.com"> arizcefdev@gmail.com</a>
                            </p>
                        </div>

                    </div>
                </div>
                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-4 address-left text-center">
                            <i class="fas fa-mobile-alt"></i>
                        </div>
                        <div class="col-md-8 address-right text-left">
                            <h6>Phone</h6>
                            <p>+944 (70) 309 0322</p>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="contact_grid_right">
            <form method="post">
                <div class="row contact_left_grid">
                    <div class="col-md-6 con-left">
                        <div class="form-group">
                            <label for="validationCustom01 my-2">Adınız</label>
                            <input class="form-control" type="text" name="UserName" placeholder="adınızı daxil edin" required="">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Gmailiniz</label>
                            <input class="form-control" type="email" name="Mail" placeholder="Gmail adresinizi daxil edin" required="">
                        </div>
                        <div class="form-group">
                            <label for="validationCustom03 my-2">Mövzu</label>
                            <input class="form-control" type="text" name="Subject" placeholder="Mövzunuzu daxil edin" required="">
                        </div>
                    </div>
                    <div class="col-md-6 con-right">
                        <div class="form-group">
                            <label for="textarea">Mesajınız</label>
                            <textarea id="textarea" name="Message" placeholder="Mesajınızı daxil edin"></textarea>
                            @Html.ValidationMessageFor(x=>x.Message,"",new {@class="errormessage"})
                        </div>
                        <input class="form-control" type="submit" value="Bizə Göndər">

                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!--//main-->

<link href="~/WebCore/css/contact.css" rel='stylesheet' type='text/css' />



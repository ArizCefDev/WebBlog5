@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<body>

    <!--//banner-->
    <section class="banner-bottom">
        <!--/blog-->
        <div class="container">
            <div class="row">
                <!--left-->
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">

                    @foreach (var item in Model)
                    {
                        <div class="blog-grid-top">
                            <div class="b-grid-top">
                                <div class="blog_info_left_grid">
                                    <a href="single.html">
                                        <img src="~/BlogImages/@item.Image" class="img-fluid" alt="">
                                    </a>
                                </div>
                                <div class="blog-info-middle">
                                    <ul>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-calendar-alt"></i>
                                                @(((DateTime)item.Date).ToString("dd-MMM-yyyy"))
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-comment"></i> @ViewBag.WriterComment Yorum
                                            </a>
                                        </li>

                                    </ul>
                                </div>
                            </div>

                            <h3>
                                <a href="#">@item.Title </a>
                            </h3>
                            <p>
                                @item.Content
                            </p>
                            <a href="/Comment/CommentAdd/" class="btn btn-primary read-m">Yorum yazın</a>
                        </div>
                    }

                    @await Component.InvokeAsync("CommentListByBlog")
                    <br />
                    @*@await Html.PartialAsync("~/Views/Comment/AddComment.cshtml")*@
                </div>

                <!--//left-->
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">

                        @*@await Component.InvokeAsync("CategoryList")*@
                    </div>
                    @await Component.InvokeAsync("WriterBlogs")

                </aside>
                <!--//right-->
            </div>
        </div>
    </section>
    <!--//main-->

</body>

@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">İndi Giriş et</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">Gmail adresiniz</label>
                        <input type="email" name="Mail" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Gmail adresinizi girin..." required="">
                        @Html.ValidationMessageFor(x=>x.Mail ,"", new {@class="errormessage"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifrəniz</label>
                        <input type="password" name="Password" class="form-control" id="exampleInputPassword1" placeholder="Şifrənizi girin..." required="">
                        @Html.ValidationMessageFor(x=>x.Password ,"", new {@class="errormessage"})
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Məni xatırla</label>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Giriş et</button>
                    <p><a href="/Register/Index/"> Hesabınız yoxdur? İndi hesab yarat.</a></p>
                </form>
            </div>
        </div>
    </div>
</section>
<!--//main-->

